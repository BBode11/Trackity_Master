@model IEnumerable<Trackity.Models.Deposit>

@{
    ViewData["Title"] = "Trackity Deposit Tracker";
}

<h1 class="text-center jumbotron">Trackity Deposit Tracker</h1>


<p>
    <a asp-action="Create">Add New Deposit</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DepositId" class="text-light">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DepositId" class="text-light">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DepositId" class="text-light">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
