@model List<Expense>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Name
            </th>
            <th>
                Cost
            </th>
            <th>
                Type
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var expense in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => expense.Date)
            </td>
            <td>
                @expense.Name
            </td>
            <td>
                @expense.Cost
            </td>
            <td>
                @expense.ExpenseType.Name
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@expense.ExpenseId" class="text-light">Edit</a> |
                <a asp-action="Details" asp-route-id="@expense.ExpenseId" class="text-light">Details</a> |
                <a asp-action="Delete" asp-route-id="@expense.ExpenseId" class="text-light">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
